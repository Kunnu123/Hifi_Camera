<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/edit_box_bg"
    android:orientation="vertical">

    <com.hificamera.thecamhi.base.TitleView
        android:id="@+id/add_rf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.hificamera.thecamhi.base.TitleView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee"
        android:gravity="center"
        android:padding="8dp"
        android:text="Please select the type of sensor you want to add to the camera:"
        android:textColor="#eeeeee" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_remote_control"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="#eeeeee"
            android:clickable="true"
            android:gravity="center"
            android:padding="7dp">

            <ImageView
                android:id="@+id/iv_remote_control"
                android:layout_width="@dimen/add_rf_grid_size"
                android:layout_height="@dimen/add_rf_grid_size"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_rf_circular"
                android:padding="2dp"
                android:src="@drawable/remote_control"
                android:tint="#39076A" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_remote_control"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="remote control"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_door"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#eeeeee"
            android:clickable="true"
            android:gravity="center"
            android:padding="10dp">

            <ImageView
                android:id="@+id/iv_door"
                android:layout_width="@dimen/add_rf_grid_size"
                android:layout_height="@dimen/add_rf_grid_size"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_rf_circular"
                android:padding="2dp"
                android:src="@drawable/door"
                android:tint="#39076A" />

            <TextView
                android:id="@+id/tv_door"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_door"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Door sensor"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal">


        <RelativeLayout
            android:id="@+id/rl_infrared"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="#eeeeee"
            android:clickable="true"
            android:gravity="center"
            android:padding="10dp">

            <ImageView
                android:id="@+id/iv_infrared"
                android:layout_width="@dimen/add_rf_grid_size"
                android:layout_height="@dimen/add_rf_grid_size"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_rf_circular"
                android:padding="2dp"
                android:src="@drawable/infrared"
                android:tint="#39076A" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_infrared"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Infrared"
                android:textSize="16sp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_smoke"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#eeeeee"
            android:clickable="true"
            android:gravity="center"
            android:padding="10dp">

            <ImageView
                android:id="@+id/iv_fire"
                android:layout_width="@dimen/add_rf_grid_size"
                android:layout_height="@dimen/add_rf_grid_size"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_rf_circular"
                android:padding="2dp"
                android:src="@drawable/fire"
                android:tint="#39076A" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_fire"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="smoke"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_gas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="#eeeeee"
            android:clickable="true"
            android:gravity="center"
            android:padding="10dp">

            <ImageView
                android:id="@+id/iv_gas"
                android:layout_width="@dimen/add_rf_grid_size"
                android:layout_height="@dimen/add_rf_grid_size"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_rf_circular"
                android:padding="2dp"
                android:src="@drawable/gas"
                android:tint="#39076A" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_gas"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Gas"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_other"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#eeeeee"
            android:clickable="true"
            android:gravity="center"
            android:padding="10dp">

            <ImageView
                android:id="@+id/iv_re_other"
                android:layout_width="@dimen/add_rf_grid_size"
                android:layout_height="@dimen/add_rf_grid_size"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_rf_circular"
                android:padding="2dp"
                android:src="@drawable/rf_other"
                android:tint="#39076A" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_re_other"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Other types"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>